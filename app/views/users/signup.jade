extends auth

block auth

  form.signup.form-horizontal(action="/signup", method="post")
    input(type='hidden', name='_csrf', value=token)
    .control-group
      label.control-label(for='first') First Name
      .controls
        input#first(type='text', name="first", placeholder='First name', value=formData.first)
    
    .control-group
      label.control-label(for='name') Last Name
      .controls
        input#last(type='text', name="last", placeholder='Last name', value=formData.last)

    .control-group
      label.control-label(for='email') Email
      .controls
        input#email(type='text', name="email", placeholder='Email', value=formData.email)

    .control-group
      label.control-label(for='password') Password
      .controls
        input#password(type='password', name="password", placeholder='Password')

    .control-group
      label.control-label(for='gender') Gender
      .controls
        select#gender(name="gender", placeholder="Please Select")
          option(value="", selected=formData.gender=="") Please Select
          option(value="female", selected=formData.gender=="female") Female
          option(value="male", selected=formData.gender=="male") Male

